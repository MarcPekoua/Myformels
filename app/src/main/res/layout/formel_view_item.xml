<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".FormelActivity.FormelActivity">

    <TextView
        android:id="@+id/formelTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="DreiecksflÃ¤che"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_marginBottom="10dp"
        android:textSize="24sp"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/activity_formelIv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <ImageView
        android:id="@+id/activity_formelIv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/dreieck"
        app:layout_constraintTop_toBottomOf="@+id/formelTV"
        app:layout_constraintBottom_toTopOf="@+id/activity_formelTvD"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/activity_formelTvD"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/colorPrimary"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="18sp"
        android:padding="5dp"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@+id/activity_formelIv"
        android:text="Ladescription de la formule"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>